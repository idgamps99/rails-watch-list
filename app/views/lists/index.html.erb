<%= render :partial => "shared/navbar" %>
<div class="container">

  <div class="row d-flex align-items-center justify-content-between">

    <div class="col-6">
      <h2>My Lists</h2>
    </div>

    <div class="col-6 text-end">
      <button type="button" class="button"><%= link_to "Add New List", new_list_path %></button>
    </div>
  </div>
<%# Cards %>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= cl_image_path(list.photo.key, height: 300, crop: :fill) if list.photo.attached? %>')">
        <h5><%= link_to list.name, list_path(list) %></h5>
      </div>
    <% end %>
  </div>
  </div>
</div>
